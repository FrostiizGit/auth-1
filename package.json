{
	"name": "@hydre/auth",
	"version": "2.4.1",
	"scripts": {
		"start:mongo": "node --harmony --experimental-specifier-resolution=node services/auth-server-mongo/src/index.js",
		"start:neo": "node --harmony --experimental-specifier-resolution=node services/auth-server-neo4j/src/index.js",
		"start:dgraph": "node --harmony --experimental-specifier-resolution=node services/auth-server-dgraph/src/index.js",
		"uninstall:all": "pnpm recursive exec -- rm -rf node_modules",
		"update:all": "pnpm recursive exec -- ncu -u",
		"prune:all": "pnpm recursive prune --prod",
		"install:all": "pnpm i -r",
		"postversion": "git push && git push --tags",
		"build:mongo": "docker build -t hydre/auth:local-mongo -f services/auth-server-mongo/Dockerfile .",
		"build:neo": "docker build -t hydre/auth:local-bolt -f services/auth-server-neo4j/Dockerfile .",
		"compose:dgraph": "docker-compose -f services/auth-server-dgraph/docker-compose.yml up --build",
		"test:dgraph": "node --harmony --experimental-specifier-resolution=node services/auth-server-dgraph/test/index.js"
	}
}
